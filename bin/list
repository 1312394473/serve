#!/usr/bin/env node

import micro from 'micro'
import { red, green } from 'chalk'

console.log('test')

const server = micro(async (req, res) => {
  res.writeHead(200)
  res.end('woot')
})

server.listen(3000, () => {
  const details = server.address()
  console.log(green(`Running on http://localhost:${details.port}`))
})
